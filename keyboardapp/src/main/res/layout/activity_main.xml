<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.albertou.study.keyboardapp.CustomInputEditView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:hint="输入数字"
        android:digits="123456"
        app:next="@+id/text_view2"
        android:layout_height="48dp" />


    <com.albertou.study.keyboardapp.CustomInputEditView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:hint="输入数字2"
        android:digits="1234567"
        app:next="@+id/text_view3"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/text_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--<com.albertou.study.keyboardapp.CustomKeyboardView-->
        <!--android:id="@+id/custom_keyboard_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

</LinearLayout>